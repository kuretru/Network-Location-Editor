<Window x:Class="NetworkLocationEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkLocationEditor"
        mc:Ignorable="d"
        Title="网络位置编辑器" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="41*"/>
        </Grid.RowDefinitions>
        <ListView Name="listView" HorizontalAlignment="Left" Height="236" Margin="10,10,0,0" VerticalAlignment="Top" Width="774">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="网关MAC地址" DisplayMemberBinding="{Binding DefaultGatewayMac}"/>
                    <GridViewColumn Header="域名后缀" DisplayMemberBinding="{Binding DnsSuffix}"/>
                    <GridViewColumn Header="网络类别" DisplayMemberBinding="{Binding Category}"/>
                    <GridViewColumn Header="创建时间" DisplayMemberBinding="{Binding DateCreated, StringFormat={}{0:yyyy-MM-dd hh:mm:ss}}"/>
                    <GridViewColumn Header="上一次连接时间" DisplayMemberBinding="{Binding DateLastConnected, StringFormat={}{0:yyyy-MM-dd hh:mm:ss}}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
